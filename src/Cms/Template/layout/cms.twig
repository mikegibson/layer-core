{% extends "layout/standard" %}

{% table_theme '@cms/block/table' %}
{% paginator_theme '@cms/block/paginator' %}

{% block title %}{% if title is defined %}{{ title }} | {% endif %}CMS | {{ parent() }}{% endblock %}

{% block stylesheets %}

	{{ parent() }}

	<link rel="stylesheet" type="text/css" href="{{ asset_url('css_cms') }}"/>

{% endblock %}

{% block header %}

	<h1>{{ app.name }} CMS</h1>

	{% include "@cms/element/nav_main" %}

{% endblock %}

{% block content %}

	{% if block('content_header') is not empty %}
	<header>

		{% block content_header %}{% endblock %}

	</header>
	{% endif %}

	<div class="inner">

		{% block content_inner %}{% endblock %}

	</div>

{% endblock %}

{% block javascripts %}

	{{ parent() }}

	<script src="{{ asset_url('js_cms') }}"></script>

{% endblock %}