{% block cms_header %}
<header id="cms-header">

	{% block cms_header_inner %}

		<h1>
			{% block cms_heading %}<a class="home" href="{{ url('app') }}">{{ app.name }}</a>{% endblock %}
		</h1>

		<nav role="navigation">

			{% if is_granted('ROLE_ADMIN') %}

			{% block cms_header_nav %}

			{{ list( app['cms.navigation_list'], 'block/nav_list' ) }}

			{% endblock cms_header_nav %}

			{% endif %}

		</nav>

	{% endblock cms_header_inner %}

</header>

{% block cms_header_javascripts %}
<script>

	require(['{{ asset_url('js_cms_header') }}']);

</script>
{% endblock cms_header_javascripts %}

{% endblock cms_header %}

